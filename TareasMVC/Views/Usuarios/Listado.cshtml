@model UsuariosListadoViewModel

@{
    ViewData["Title"] = "Listado de usuarios";
    Layout = "../shared/_layout";
}


<h1>Listado de Usuarios</h1>

@if (Model.Mensaje is not null)
{
    <div class="alert alert-success" role="alert">
        @Model.Mensaje
    </div>
}

@if (Model.Usuarios is not null)
{
    <form method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Email</td>
                    <td></td>
                    <td>Acción</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model.Usuarios)
                {
                    <tr>
                        <td>@usuario.Email</td>
                        <td></td>
                        <td>
                            <button class="btn btn-primary me-2" asp-action="HacerAdmin" 
                            asp-route-email="@usuario.Email">Hacer Admin</button>

                            <button class="btn btn-secondary me-2" asp-action="RemoverAdmin"
                                    asp-route-email="@usuario.Email">
                                Remover Admin
                            </button>
                        </td>
                       
                    </tr>
                }
            </tbody>
        </table>
    </form>
}
